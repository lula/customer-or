= search_form_for @search, html: { class: "form-horizontal" } do |f|
  .control-group
    = f.input :name_match, label: "Name", required: false
    = f.input :addresses_city_match, label: "City", required: false
    = f.input :addresses_country_match, as: :country, label: "Country", required: false, input_html: { style: "width: 220px;" }
  
  = button_tag type: :submit, class: "btn btn-primary btn-small" do
    Search
  
:javascript
  $('select').addClass("form-control").select2()