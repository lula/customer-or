- model_class = Representative
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  = @representative.name

%p
  %strong= model_class.human_attribute_name(:address) + ':'
  = @representative.address.full_description
  

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), representatives_path, :class => 'btn btn-small'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_representative_path(@representative), :class => 'btn btn-small'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), representative_path(@representative), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-small'
