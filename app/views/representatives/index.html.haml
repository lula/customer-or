- model_class = Representative
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
  
#account_search_form  
  = render "search_form"
  
%table.table.table-striped.table-condensed.table-hover.table-bordered
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th{ width: "90px"}=t '.actions', :default => t("helpers.actions")
  %tbody
    - @representatives.each do |representative|
      %tr
        %td= link_to representative.name, representative_path(representative)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_representative_path(representative), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), representative_path(representative), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
