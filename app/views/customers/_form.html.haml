= simple_form_for @customer, html: { role: "form" } do |f|
  .row
    .col-md-12
      = panel t("views.panels.customer.details", default: "Details"), "details_panel", anchor: "customer_details" do
        - if @customer.new_record?
          .row
            .col-md-12
              %legend= t("views.legends.customer.data", default: "Customer")
        .row
          .col-md-5
            = f.input :name, autofocus: true
          .col-md-2.col-md-offset-1
            = f.input :valid_from, as: :datetime_picker
          .col-md-2
            = f.input :valid_to, as: :datetime_picker
          .col-md-7
            - if @customer.new_record?
              #address_form
                %legend= t("views.legends.address.data", default: "Address")
                = f.simple_fields_for @customer.address do |a|
                  .hidden
                    = a.input :main, as: :boolean, input_html: { checked: true }
                  .row
                    .col-md-6
                      = a.input :street, label: t("mongoid.attributes.address.street", default: "Street")
                    .col-md-6
                      = a.label :house_nr, class: "no-overflow"
                      = a.input :house_nr, label: false, input_html: {style: "max-width: 70px"}
                  .row
                    .col-md-6
                      = a.input :city
                    .col-md-5
                      = a.input :country, iso_codes: true
  
  - unless @customer.new_record?
    .row
      .col-md-6
        = panel t("mongoid.models.address", count: 2, default: "Addresses"), "addresses_panel", links: [[t("mongoid.actions.new", default: "New"), new_customer_address_path(@customer)]], anchor: "customer_address" do
          = render "addresses", editable: true
      .col-md-6
        = panel t("mongoid.models.business_hour", count: 2, default: "Business Hours"), "business_hours_panel", links: [[t("mongoid.actions.new", default: "New"), new_customer_business_hour_path(@customer)]], anchor: "customer_business_hours" do
          = render "business_hours", editable: true
  .row
    .col-md-6
      = panel t("mongoid.models.representative", count: 1, default: "Representative"), "representative_panel", anchor: "customer_representative" do
        .row
          .col-md-8
            = f.input :representative_id do
              = f.collection_select :representative_id, @representatives, :id, :name, { include_blank: true }, { }
    .col-md-6
      = panel t("mongoid.models.organization", count: 2, default: "Organizations"), "organizations_panel", anchor: "customer_organizations" do
        .row
          .col-md-8
            = f.input :organization_ids, collection: @organizations, input_html: { multiple: true }

  .row
    .col-md-12
      .form-actions
        = button_tag type: :submit, :class => 'btn btn-primary btn-sm' do
          = fa_icon "save"
          = t("mongoid.actions.customer.save")
        = link_to customer_path(@customer), :class => 'btn btn-danger btn-sm' do
          = fa_icon "remove", text: "Cancel"
          

:javascript
  $('.datepicker').datetimepicker({
    format: 'YYYY-MM-DD',
    pickTime: false
  });
  
  $("select").addClass("form-control").select2({allowClear: true})
