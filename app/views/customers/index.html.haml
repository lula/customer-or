- model_class = Customer
.page-header
  %h2=t '.title', :default => model_class.model_name.human.pluralize.titleize

#account_search_form  
  = render "search_form"
#accounts-table
  %table.table.table-striped.table-condensed.table-hover.table-bordered
    %thead
      %tr
        %th= model_class.human_attribute_name(:name)
        %th= t(:address)
        %th= model_class.human_attribute_name(:valid_from)
        %th= model_class.human_attribute_name(:valid_to)
        %th= model_class.human_attribute_name(:created_at)
        %th=t '.actions', :default => t("helpers.actions")
    %tbody
      - @customers.each do |customer|
        %tr
          %td= link_to customer.name, customer_path(customer)
          %td= customer.addresses.first.full_description
          %td= customer.valid_from
          %td= customer.valid_to
          %td= customer.created_at
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_path(customer), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_path(customer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= paginate @customers, pagination_class: "pagination-small pagination-centered"

=# link_to t('.new', :default => t("helpers.links.new")), new_customer_path, :class => 'btn btn-primary'