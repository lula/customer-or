- model_class = Customer
.page-header
  %h2
    =t '.title', :default => model_class.model_name.human.titleize  
    = link_to edit_customer_path(@customer) do 
      %i.icon-edit
    = link_to customer_path(@customer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do
      %i.icon-trash.danger

.row 
  .col-md-6
    %p
      %strong= model_class.human_attribute_name(:name) + ':'
      = @customer.name
    %p
      %strong= t("mongoid.models.representative", default: "Representative") + ':'
      = @customer.representative.name if @customer.representative
  .col-md-6
    %p
      %strong= model_class.human_attribute_name(:valid_from) + ':'
      = @customer.valid_from
    %p
      %strong= model_class.human_attribute_name(:valid_to) + ':'
      = @customer.valid_to
%br
.row
  .col-md-6
    = panel t("mongoid.models.addresses", count: 2, default: "Addresses"), links: [[t("mongoid.actions.new", default: "New"), new_customer_address_path(@customer)]] do
      = render "addresses"

  .col-md-6    
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = t("mongoid.models.business_hour", count: 2, default: "Business Hours")
          |
          = link_to "New", new_customer_business_hour_path(@customer)
      .panel-body
        = render "business_hours"
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = t("mongoid.models.visit", count: 2, default: "Visits")
          |
          = link_to "New", new_customer_visit_path(@customer)
          .pull-right
            %a.panel-collapse{ href: "#", data: { toggle: "collapse", target: "#visits_panel" } }
              %i.icon-chevron-sign-up
      .panel-body
        #visits_panel.collapse.in
          = render "visits"
.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title 
          = t("mongoid.models.organization", count: 2, default: "Organizations")
          |
          = link_to "New", new_admin_organization_path(@customer)
      .panel-body
        = render "organizations", editable: false
