- model_class = Customer
.page-header
  %h2=t '.title', :default => model_class.model_name.human.titleize

.row 
  .span6
    %p
      %strong= model_class.human_attribute_name(:name) + ':'
      = @customer.name
  .span6
    %p
      %strong= model_class.human_attribute_name(:valid_from) + ':'
      = @customer.valid_from
    %p
      %strong= model_class.human_attribute_name(:valid_to) + ':'
      = @customer.valid_to

.row
  .span6
    %p
      %strong= t(:addresses)
      %br
      = render "addresses", show: true
  .span6
    %p
      %strong= t(:business_hours)
      %br
        = render "business_hours", show: true

.row
  .span12
    %p
      %strong
        = t(:visits)
        = link_to "New", new_customer_visit_path(@customer)
      %br
      = render "visits", show: true

.row
  .span12
    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), customers_path, :class => 'btn btn-small'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_path(@customer), :class => 'btn btn-small'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_path(@customer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-small'
