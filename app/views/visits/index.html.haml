- model_class = Visit
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

#accounts-table
  %table.table.table-striped.table-condensed.table-hover.table-bordered
    %thead
      %tr
        %th= model_class.human_attribute_name(:description)
        %th= model_class.human_attribute_name(:vdate)
        %th= model_class.human_attribute_name(:comment)
        %th= model_class.human_attribute_name(:customer)
        %th= model_class.human_attribute_name(:representative)
        %th= model_class.human_attribute_name(:created_at)
        %th{ width: "90px"}=t '.actions', :default => t("helpers.actions")
    %tbody
      - @visits.each do |visit|
        %tr
          %td= link_to visit.description, visit_path(visit)
          %td= visit.vdate
          %td= visit.comment
          %td= visit.customer.name
          %td= visit.representative.name
          %td=l visit.created_at
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_visit_path(visit), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), visit_path(visit), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
