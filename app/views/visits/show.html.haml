- model_class = Visit
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:descripton) + ':'
  = @visit.description
%p
  %strong= model_class.human_attribute_name(:vdate) + ':'
  = @visit.vdate
%p
  %strong= model_class.human_attribute_name(:comment) + ':'
  = @visit.comment

%p
  %strong= model_class.human_attribute_name(:status) + ':'
  = @visit.status_text

%p
  %strong= t(:customer) + ':'
  = link_to @visit.customer.name, customer_path(@visit.customer)

%p
  %strong= t(:representative) + ':'
  = link_to @visit.representative.name, representative_path(@visit.representative)

.form-actions
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_visit_path(@visit), :class => 'btn btn-small'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), visit_path(@visit), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-small'