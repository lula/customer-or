- model_class = Visit
.page-header
  %h2
    =t '.title', :default => model_class.model_name.human.titleize
    - if can?(:edit, Visit)
      .pull-right
        = link_to edit_visit_path(@visit) do
          = fa_icon "edit"
        = link_to visit_path(@visit), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do
          = fa_icon "trash-o"
    
= panel t("views.titles.details", default: "Details"), "details_panel" do 
  .row
    .col-md-6
      %p
        %strong= model_class.human_attribute_name(:descripton) + ':'
        = @visit.description
      %p
        %strong= t(:customer) + ':'
        = link_to @visit.customer.name, customer_path(@visit.customer)
      %p
        %strong= t(:representative) + ':'
        = link_to @visit.representative.name, representative_path(@visit.representative)
    .col-md-6
      %p
        %strong= model_class.human_attribute_name(:vdate) + ':'
        = @visit.vdate
      %p
        %strong= model_class.human_attribute_name(:status) + ':'
        = @visit.status_text
      %p
        %strong= model_class.human_attribute_name(:comment) + ':'
        = @visit.comment