%h1 Visit Planning
= simple_form_for :visit_plan, url: visit_plans_path do |f|
  .row
    .span6
      = f.input :start_date, input_html: { class: "datepicker" }
      = f.input :end_date, input_html: { class: "datepicker" }
    .span6
      = f.input :customer_ids, collection: Customer.all, input_html: { multiple: true, style: "width: 220px" }
  
  = f.submit class: "btn btn-primary btn-small"
  
:javascript
  $('.datepicker').datepicker({
    format: 'yyyy-mm-dd',
    autoclose: true
  });
  $("select").select2({allowClear: true})
