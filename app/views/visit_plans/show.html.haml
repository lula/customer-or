%h2 Visit Plan
#visits-table
  - unless @errors.empty?
    .alert.alert-info
      %strong Please notice:
      %ul
        - @errors.each do |error|
          - error.messages.each do |key, msg|
            - msg.each do |m|
              %li= m
  = datagrid_table VisitsGrid.new, @visits, html: { class: "table table-condensed table-hover table-bordered" }
  = paginate @visits, pagination_class: "pagination-small pagination-centered"
