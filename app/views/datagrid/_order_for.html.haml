.order
  - if grid.order == column.name  
    = link_to url_for(grid.param_name => grid.as_query.merge(:order => column.name, :descending => !grid.descending?)), class: grid.descending ? "desc selected" : "asc selected", remote: true do 
      - order_icon_class =  grid.descending? ? "icon-sort-by-attributes-alt" : "icon-sort-by-attributes"
      %i{class: order_icon_class}
  - else
    = link_to url_for(grid.param_name => grid.as_query.merge(:order => column.name, :descending => false)), class: "asc", remote: true do 
      - order_icon_class =  grid.descending? ? "icon-sort-by-attributes-alt" : "icon-sort-by-attributes"
      %i.icon-reorder