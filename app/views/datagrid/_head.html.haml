- editable = options[:editable] || admin_signed_in?
- if options[:toolbar]
  %tr
    - colspan = editable ? grid.columns(*options[:columns]).length + 2 : grid.columns(*options[:columns]).length
    %th{ colspan: colspan }
      = render options[:toolbar], grid: grid
      &nbsp;
%tr
  - if options[:selectable]
    %th
      %a.select-all{href: "#"}
        %i.icon-save
  - if options[:starred]
    %th
  - grid.columns(*options[:columns]).each do |column|
    %th{class: datagrid_column_classes(grid, column)}
      = column.header
      = datagrid_order_for(grid, column) if column.order && options[:order]
  
  -# Actions
  - if editable
    %th{ style: "width: 40px" }