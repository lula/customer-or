- model_class = Organization
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  = @organization.name
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  = @organization.country
  
%p 
  %strong= t(:customers)
  %br
  = datagrid_table CustomersGrid.new, @customers, html: { class: "table table-condensed table-hover table-bordered" }
  = paginate @customers, pagination_class: "pagination-small pagination-centered", param_name: "customers_page"

%p 
  %strong= t(:representatives)
  %br
  = datagrid_table RepresentativesGrid.new, @representatives, html: { class: "table table-condensed table-hover table-bordered" }
  = paginate @representatives, pagination_class: "pagination-small pagination-centered", param_name: "representatives_page"
  
.form-actions
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_organization_path(@organization), :class => 'btn btn-small'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_organization_path(@organization), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-small'
